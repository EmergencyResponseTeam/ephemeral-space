<controls:ESJobPrefToggleButton
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._ES.Multistation.Ui"
    HorizontalExpand="True"
    VerticalExpand="True">
    <ContainerButton Name="ToggleButton" Access="Public" HorizontalExpand="True" VerticalExpand="True" ToggleMode="True" StyleClasses="button">
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <TextureRect Name="JobIcon" VerticalAlignment="Center" TextureScale="2 2"/>
            <Label Name="JobNameLabel" HorizontalExpand="True" Margin="5 0"/>
            <Control HorizontalExpand="True"/>
            <RichTextLabel Name="ReadyCountLabel" HorizontalAlignment="Right"/>
        </BoxContainer>
        <TextureRect Name="LockedPanel" TextureScale="0.4 0.4" Stretch="KeepCentered" HorizontalExpand="True" HorizontalAlignment="Right"/>
    </ContainerButton>
</controls:ESJobPrefToggleButton>
